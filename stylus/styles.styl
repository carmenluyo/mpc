@import 'nib'
@import 'fonts'
@import 'ico'
@import 'normalize'

// Colors
negro = #000
plomo = #656565
rojo  = #c0252c
// Fonts
title = 'Arial', sans-serif
icomoon = 'icomoon'
helvetica-lt = 'HelveticaNeueLTStd-Lt'
helvetica-Bd = 'HelveticaNeueLTStd-Bd'
helvetica-Th = 'HelveticaNeueLTStd-Th'
helvetica-Md = 'HelveticaNeueLTStd-Md'
helvetica-roman = 'HelveticaNeueLTStd-Roman'
// Mixins
placeholder(color)
	::-webkit-input-placeholder { color: color; } /* WebKit */
	:-moz-placeholder { color: color; } /* Firefox 18- */
	::-moz-placeholder { color: color; } /* Firefox 19+ */
	:-ms-input-placeholder { color: color; } /* IE 10+ */
		
clear()
	*zoom: 1
	&: before, &:after
	content: " "
		display: table
	&:after
		clear: both

centerY()
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -50%)
	width 100%

// General
.ancho
	max-width 100%
	width 90%
	margin auto
body
	color black
	font-size 16px
	font-family helvetica-lt
a
	color inherit
	&:focus
		outline none
*
	outline none


@import 'general'
@import 'header-footer'

